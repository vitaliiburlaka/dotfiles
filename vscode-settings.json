{
  "editor.fontSize": 12,
  "editor.lineHeight": 20,
  "editor.letterSpacing": 0.5,
  "files.trimTrailingWhitespace": true,
  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  "editor.tabSize": 2,
  "editor.fontWeight": "400",
  "editor.cursorBlinking": "phase",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.colorDecorators": false,
  "files.eol": "\n",
  "editor.renderWhitespace": "none",
  "editor.rulers": [80, 100, 120],
  "editor.minimap.showSlider": "always",
  "extensions.ignoreRecommendations": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // show snippets before any other auto completion
  "editor.snippetSuggestions": "top",
  // These are all my auto-save configs
  "editor.formatOnSave": true,
  // turn off for JS and JSX, eslint will handle that
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  // ESLint plugin will run fix on save
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  // Optional BUT IMPORTANT: turned off for JS since ESLint already handle that, keeps the Prettier extension enabled for other languages like CSS and HTML
  "prettier.disableLanguages": ["javascript", "javascriptreact"],
  "telemetry.enableTelemetry": false,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "terminal.integrated.shell.osx": "zsh",
  "terminal.integrated.fontFamily": "Meslo LG M for Powerline",
  "terminal.integrated.fontSize": 14,
  // this lets you quick open multiple items in a row and now have the previous ones closed on you
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.activityBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "SynthWave '84",
  "breadcrumbs.enabled": false,
  "editor.suggestSelection": "first",
  "vscode_custom_css.imports": [
    "file:///Users/vitalii/.vscode/extensions/robbowen.synthwave-vscode-0.0.7/synthwave84.css"
  ]
}
