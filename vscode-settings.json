{
  "editor.lineHeight": 20,
  "editor.letterSpacing": 0.5,
  "files.trimTrailingWhitespace": true,
  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  "editor.tabSize": 2,
  "editor.cursorBlinking": "phase",
  "editor.multiCursorModifier": "ctrlCmd",
  "files.eol": "\n",
  "editor.rulers": [
    80,
    100
  ],
  "editor.minimap.showSlider": "always",
  "extensions.ignoreRecommendations": false,
  "editor.bracketPairColorization.enabled": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // show snippets before any other auto completion
  "editor.snippetSuggestions": "top",
  // These are all my auto-save configs
  "editor.formatOnSave": true,
  // turn off for JS and JSX, eslint will handle that
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  // ESLint plugin will run fix on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // this lets you quick open multiple items in a row and now have the previous ones closed on you
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Oceanic Next",
  "editor.suggestSelection": "first",
  // Python settings
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },
  "editor.linkedEditing": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.inlineSuggest.enabled": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "telemetry.telemetryLevel": "off",
  "breadcrumbs.filePath": "last",
  "workbench.iconTheme": "vscode-icons",
  "window.commandCenter": true,
  "vsicons.dontShowNewVersionMessage": true,
  "terminal.integrated.fontFamily": "Meslo LG M for Powerline",
  "terminal.integrated.persistentSessionScrollback": 10000,
  // Forces MacOS to use rc files. Prevents from running shell in aa login mode
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": [],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": []
    },
  },
}