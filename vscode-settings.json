{
  "editor.lineHeight": 20,
  "editor.letterSpacing": 0.5,
  "files.trimTrailingWhitespace": true,
  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  "editor.tabSize": 2,
  "editor.cursorBlinking": "phase",
  "editor.multiCursorModifier": "ctrlCmd",
  "files.eol": "\n",
  "editor.rulers": [
    80,
    100,
    120
  ],
  "editor.minimap.showSlider": "always",
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "python.formatting.provider": "black",
  "extensions.ignoreRecommendations": false,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  // show snippets before any other auto completion
  "editor.snippetSuggestions": "top",
  // These are all my auto-save configs
  "editor.formatOnSave": true,
  // turn off for JS and JSX, eslint will handle that
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  // ESLint plugin will run fix on save
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  // Optional BUT IMPORTANT: turned off for JS since ESLint already handle that, keeps the Prettier extension enabled for other languages like CSS and HTML
  "prettier.disableLanguages": [
    "javascript",
    "javascriptreact"
  ],
  "telemetry.enableTelemetry": false,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "terminal.integrated.fontFamily": "Meslo LG M for Powerline",
  // this lets you quick open multiple items in a row and now have the previous ones closed on you
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Oceanic Next",
  "breadcrumbs.enabled": false,
  "editor.suggestSelection": "first"
}